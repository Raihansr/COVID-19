<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/languageTab"
    app:tabTextAppearance="@style/LanguageTabText"
    android:layout_width="@dimen/switch_Width"
    android:layout_height="@dimen/switch_Height"
    android:background="@drawable/tab_background_lang"
    app:tabTextColor="@color/colorPrimary"
    app:tabMode="fixed"
    app:tabGravity="fill"
    app:tabBackground="@drawable/tab_selector_lang"
    app:tabSelectedTextColor="@color/font_Color_Light"
    app:tabIndicatorHeight="0dp"
    app:elevation="0dp"
    app:tabRippleColor="@android:color/transparent">

    <com.google.android.material.tabs.TabItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switch_English"
        tools:ignore="HardcodedText" />

    <com.google.android.material.tabs.TabItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switch_Bengali"
        tools:ignore="HardcodedText" />

</com.google.android.material.tabs.TabLayout>